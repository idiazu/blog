<h1>My First Blog</h1>
<p><%= link_to "New Post", new_post_path %></p>
<% @posts.each do |post| %>
	<h2><%= link_to post.title, post %></h2>
	<p><%= post.content %></p>
	<p>
		<%= link_to "Edit Post", edit_post_path(post) %> | 
		<%= link_to "Delete Post", post, :confirm => "Are you sure?", :method => :delete %> 
	</p>
	<hr/>
<% end %>